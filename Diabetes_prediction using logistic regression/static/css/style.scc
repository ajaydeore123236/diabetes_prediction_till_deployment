body {
  height: 100%;
}

* {
  box-sizing: border-box;
}

.bg-img {
  /* The image used */


  /* Control the height of the image */
  min-height: 380px;

  /* Center and scale the image nicely */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}

